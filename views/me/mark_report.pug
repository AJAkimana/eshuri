                  exam_t3_mark:dataTerm3[k].exam_mark,
                  total_t3_mark:dataTerm3[k].total_mark,
                  total_t3_pct:term3Pct,
                  annual_pct:annualPct,
                  annual:annual,
                  });
                }
              }
            }
          }
        })
