.col-md-12.center(ng-show="term_sumary")
  .card
    .card-header.card-header-icon(data-background-color="rose")
      i.material-icons report
    .card-content#term-report
      h4.card-title.text-center.text-info(ng-show="termSumary.length")
        span {{'#{school_name}'|uppercase}}
        br
        | PO.Box &nbsp
        span {{'#{po_code}'|uppercase}}
        br
        | {{classename|uppercase|toClasseName}} YEAR {{choosen_year|toNormal}} {{choosen_term|toTerm|uppercase}} MARKS
      h2.card-title.text-center.text-info(ng-show="loading")
        strong Loading, please wait...
      h4.card-title.text-center.text-info(ng-show="!termSumary.length&&!loading")
        strong Select the info above to generate report
      .box
        .box-body
          .table-responsive(ng-show="termSumary.length")
            table.table.table-condensed.table-striped.table-bordered
              tr
                th Posit.
                //- This will put all the required columns for the table
                th(ng-repeat='key in keys', ng-if="key !== 'courses'&&key !== 'echecs'&&key !== 'urn'&&key !== 'pctage'" ng-bind="key|uppercase")
              tr(ng-repeat='sheet in termSumary')
                td {{$index + 1}}
                td(ng-repeat='key in keys', ng-if="key !== 'courses'&&key !== 'echecs'&&key !== 'urn'&&key !== 'pctage'", ng-bind='sheet[key]|uppercase', ng-style="'sheet[key]==name'?left_algn:''",style='font-weight: bold;')
            a.btn-simple.btn.label.btn-rose.pull-right Generated by eShuri.rw