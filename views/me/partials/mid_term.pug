.col-md-12.center(ng-show="mt_report")
  .card
    .card-header.card-header-icon(data-background-color="rose")
      i.material-icons report
    .card-content#mid-term-report
      h2.card-title.text-center.text-info(ng-show="midMarks.length")
        strong Mid-term report for {{classename|uppercase|toClasseName}}
      h2.card-title.text-center.text-info(ng-show="loading")
        strong Loading, please wait...
      h4.card-title.text-center.text-info(ng-show="!midMarks.length&&!loading")
        strong Select the info above to generate report
      .box
        .box-body
          .table-responsive(ng-show="midMarks.length")
            table.table.table-condensed.table-striped.table-bordered
              tr
                th Places
                //- This will put all the required columns for the table
                th(ng-repeat='key in keys', ng-if="key !== 'courses'&&key !== 'echecs'&&key !== 'urn'" ng-bind="key|uppercase")
              tr(ng-repeat='sheet in midMarks')
                td {{$index + 1}}
                td(ng-repeat='key in keys', ng-if="key !== 'courses'&&key !== 'echecs'&&key !== 'urn'", ng-bind='sheet[key]|uppercase', ng-style="'sheet[key]==name'?left_algn:''",style='font-weight: bold;')
            a.btn-simple.btn.label.btn-rose.pull-right Generated by eShuri.rw