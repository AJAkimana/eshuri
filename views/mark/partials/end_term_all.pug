.col-md-12.center(ng-show="term_report_all")
  .card
    .card-header.card-header-icon(data-background-color="rose")
      i.material-icons report
    .card-content#endof-term-report
      h2.card-title.text-center.text-info(ng-show="termMarks.length")
        strong {{term|toTermName}} {{term}} report for {{name_class|uppercase|toClasseName}}
      h2.card-title.text-center.text-info(ng-show="loading")
        strong Loading, please wait...
      h4.card-title.text-center.text-info(ng-show="!termMarks.length&&!loading")
        strong Select the info above to generate report
      .box
        .box-body
          .table-responsive(ng-show="termMarks.length")
            table.table.table-condensed.table-striped.table-bordered
              thead
                tr
                  th(rowspan='4')
                    | Student names
                  th.report-td-pct(colspan='3'): strong MAX POINTS
                  th.report-th(colspan='5'): strong {{term|toTermName}} {{term}}
                tr(align='center')
                  th.report-td-pct: strong Test
                  th.report-td-pct: strong Exam
                  th.report-td-pct: strong Total
                  th.report-th: strong Test
                  th.report-th: strong Exam
                  th.report-th: strong Total
                  th.report-th: strong %
                  th.report-th: strong Plc
              tbody
                tr(ng-repeat="t_mark in termMarks")
                  td(style="text-align:left;"): label.btn-simple.btn-link(ng-click="getTermReportOne(t_mark.id, $index+1)", ng-bind="t_mark.name")
                  td.report-td-pct: strong(ng-bind="test_q")
                  td.report-td-pct: strong(ng-bind="exam_q")
                  td.report-td-pct: strong(ng-bind="total_q")
                  td(ng-bind="t_mark.test.toFixed(1)")
                  td(ng-bind="t_mark.exam.toFixed(1)")
                  td(ng-bind="t_mark.total.toFixed(1)")
                  td.report-td-pct
                    span(ng-if="t_mark.percent<50")
                      u(style="color:red;",ng-bind="t_mark.percent.toFixed(1)")
                    span(ng-if="t_mark.percent>=50", ng-bind="t_mark.percent.toFixed(1)") 
                  td(ng-bind="($index+1)")
            a.btn-simple.btn.label.btn-rose.pull-right Generated by eShuri.rw