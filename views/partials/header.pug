nav.navbar.navbar-absolute.navbar-fixed-top(role='navigation', style="position:fixed;")
	//nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
	.container-fluid
		.navbar-header
			button.navbar-toggle(type='button', data-toggle='collapse')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href='/') eShuri Platform 
		.collapse.navbar-collapse
			ul.nav.navbar-nav.pull-right
				if access > 1
					li: a.btn-simple.btn.btn-info(href="/timeline")
						i.material-icons web_asset
						strong Eshuri Wall
				if access > 1 && access!=5
					li: a.btn-simple.btn.btn-success(href="/school")
						i.material-icons school
						strong My school
				if access <= 4 && access != 1
					li: a.btn-simple.btn.btn-success(href="/library")
						i.material-icons book
						strong Library
				if access ==4
					li: a.btn-simple.btn.btn-success(href="/parents")
						i.material-icons school
						strong My parents 
				if access ==5
					li: a.btn-simple.btn.btn-success(href="/parent")
						i.material-icons school
						strong Select Student
				//Only admins has dashboard
				if access <= 2.1
					li: a.btn-simple.btn.btn-warning(href="/dashboard")
						i.material-icons dashboard
						strong Dashboard
				if access == 4
					li: a(href="/report/"+pic_id)
						i.material-icons local_activity
						strong My report
				li: a(href="http://gocoderz.com/wp-content/uploads/articulate_uploads/Lesson_1:_Drivetrain/story_html5.html" target="_blank")
						i.material-icons code
						strong Robotics Programming
				li.dropdown
					if access
						a.btn-simple.btn.btn-info.dropdown-toggle(data-toggle="dropdown")
							i.material-icons person
							strong {{'#{pic_name}'|| 'Account'|uppercase}}
					if !access
						a.btn-simple.btn.btn-info.dropdown-toggle(data-toggle="dropdown")
							i.material-icons person
							strong New Account
					ul.dropdown-menu
						if access
							li
								a(href="/user.settings")
									i.material-icons settings
									| Change your settings
						if !access
							li.divider
							li
								a(href="/user.signup")
									i.material-icons person
									| New account
							li.divider
							li
								a(href="/user.signin")
									i.material-icons person
									| Login
						if access
							li.divider
							li
								a(href="/user.logout")
									i.material-icons face
									| Logout