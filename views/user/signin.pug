extends ../layout
block content
	.wrapper.wrapper-full-page.full-page-background(ng-controller="SigninCtrl",style="background-image: url('../imgs/login.jpeg')")
		.full-page.login-page(filter-color="black")
			.content
				.container
					.row
						.col-md-4.col-sm-6.col-md-offset-4.col-sm-offset-3
							.card.card-login.card-hidden
								
								p.category.text-center
									center
										h3
											strong Login Into Your Account
										h4 
											strong Don't have one? 
											a(href="/user.signup")
												|	SIGNUP
								.card-content
									.input-group
										span.input-group-addon.icon.ion-ios-person
										.form-group.label-floating
											label.control-label Enter your email
											input.form-control(type="email",autocomplete="off",ng-model="nvUser.email")
									.input-group
										span.input-group-addon.icon.ion-ios-locked-outline
										.form-group.label-floating
											label.control-label Password
											input.form-control(type="password",autocomplete="off",ng-model="nvUser.password")
								.footer.text-center
									button.btn.btn-rose.btn-wd.btn-sm(ng-click="signin()") 
										strong Login
									.forgot
										button.btn.label.label-info(ng-click="forgotPassword()") Forgot your password?
									.forgot
										h4
											strong
												a(href="/user.signup") Create a new account ?
									.forgot
										button.btn.label.label-danger(ng-click="resendValidationCode()",ng-show="resend_show") Resend validation code ?
block append scripts
	script(src="../js/MIT/MIT_sweetalert2.js", type="text/javascript")
	script(src="../js/app/SigninCtrl.js", type="text/javascript")